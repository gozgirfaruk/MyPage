@model MyPage.Models.Entity.Contact

@{
    ViewBag.Title = "Bring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-12 col-lg-12 col-md-12">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4"> Eğitim Güncelleme Sayfası</h1>
                                    </div>
                                  @{ string deger;
                                      deger = ViewBag.c;
                                      string value = "https://formsubmit.co/";
                                      string toplam = value + deger;
                                      }
                                    
                                    <form class="user" action="@toplam" method="post" >
                                        <div class="form-group">
                                            @Html.TextBoxFor(x=>x.ContactID, new { @type = "hidden" })
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Tarih")
                                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control form-control-user" })
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Okul Adı")
                                            @Html.TextBoxFor(x => x.eMail, new { @class = "form-control form-control-user" })
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Okul Ünvanı")
                                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control form-control-user" })
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Açıklama")
                                            @Html.TextAreaFor(x => x.Message, new { @rows = 2, @class = "form-control form-control-user" })
                                        </div>
                                        <br />

                                        <button class="btn btn-primary btn-user btn-block" type="submit">Güncelle</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>