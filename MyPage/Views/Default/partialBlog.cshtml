@using MyPage.Models.Entity
@model List<Project>


<section class="colorlib-blog" data-section="blog">
    <div class="colorlib-narrow-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
                <h2 class="colorlib-heading">Gerçekleştirdiğim Çalışmalar</h2>
            </div>
        </div>
        <div class="row">
            @foreach(var item in Model)
            {
            <div class="col-md-4 col-sm-6 animate-box" data-animate-effect="fadeInLeft">
                <div class="blog-entry">
                    <a href="@item.Url" class="blog-img"><img src=@item.ImageUrl class="img-responsive"></a>
                    <div class="desc">
                        <span><small>@item.Date </small> | </span>
                        <h3><a>@item.Header</a></h3>
                        <p>@item.Description</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>


