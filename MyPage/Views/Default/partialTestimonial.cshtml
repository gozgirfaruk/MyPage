@using MyPage.Models.Entity
@model List<Referance>

<section class="colorlib-referances" data-section="referances">
    <div class="colorlib-narrow-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
                <h2 class="colorlib-heading">Referanslarım</h2>
            </div>
        </div>
        <div class="row row-pt-md">
            @foreach (var item in Model)
            {
                <div class="col-md-4 text-center animate-box">
                    <div class="services @item.color">
                        <span class="icon">
                            <i class="fa-solid fa-user-large"></i>
                        </span>
                        <div class="desc">
                            <h3>@item.Name</h3>
                            <h6>@item.Title</h6>
                            <p>@item.Description</p>
                        </div>
                        <a href="@item.socialmedia" style="font-size:24px"><i class="@item.iconurl"></i> </a> 
                    </div>
                </div>
            }

            <!--

                1- icon-color
                2-name surname
                3-pozisyon-şirket
                4-description
                5-socialurl
                6-socialurl2

            -->
        </div>
    </div>
</section>