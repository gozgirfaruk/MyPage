
@using MyPage.Models.Entity
@model List<Contact>

<section class="colorlib-contact" data-section="contact">
    <div class="colorlib-narrow-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
                <span class="heading-meta">Bize Ulaşabilirsin !</span>
                <h2 class="colorlib-heading">İletişim</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <div class="colorlib-feature colorlib-feature-sm animate-box" data-animate-effect="fadeInLeft">
                    <div class="colorlib-icon">
                        <i class="fa-solid fa-globe"></i>
                    </div>
                    <div class="colorlib-text">
                        <p><a>gozgirfaruk@gmail.com</a></p>
                    </div>
                </div>

                <div class="colorlib-feature colorlib-feature-sm animate-box" data-animate-effect="fadeInLeft">
                    <div class="colorlib-icon">
                        <i class="fa-solid fa-map"></i>
                    </div>
                    <div class="colorlib-text">
                        <p>27500 Şehitkamil,Gaziantep</p>
                    </div>
                </div>



                <div class="colorlib-feature colorlib-feature-sm animate-box" data-animate-effect="fadeInLeft">
                    <div class="colorlib-icon">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="colorlib-text">
                        <p><a>0 (2013) 789 13 36</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-md-push-1">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1 col-md-pull-1 animate-box" data-animate-effect="fadeInRight">
                      
                            <form method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="İsim" name="NameSurname" required>
                                    
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="e-Posta" name="eMail" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Başlık" name="Subject" required>
                                </div>
                                <div class="form-group">
                                    <textarea name="Message" id="message" cols="30" rows="7" class="form-control" placeholder="Mesaj" required></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary btn-send-message" value="Gönder">
                                </div>
                            </form>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>